    syscall $IO_PUTCHAR
    
    mov u0,:spie
    mov u1,^spie
    syscall $IO_PUTSTRING
    mov u0,0
    syscall $IPC_BLOCK_QUEUE
    mov *:type,s1
    mov *:vcpu,u0
    mov *:vs,u1
    mov *:ipc_reg,u2
    mov *:req_id,u3
    mov *:block,u4
    mov	*:off,u5
