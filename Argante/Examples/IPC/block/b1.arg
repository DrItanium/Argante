    mov u0,*:len
    syscall $IO_PUTINT
    mov u0,10
    syscall $IO_PUTCHAR

    mov u0,*:adr
    mov u1,1000
    mul u1,4
    syscall $IO_PUTSTRING
    mov u0,10
    syscall $IO_PUTCHAR

    
    mov u0,0
    mov u1,*:req_id
    mov u2,0
    syscall $IPC_BLOCK_ACK    

    mov u0,*:adr
    mov u1,*:len
    mul u1,4
    syscall $IO_PUTSTRING
    mov u0,10
    syscall $IO_PUTCHAR

    mov u0,*:id
